


@model StudentAddVM

<h1 class="text-center my-3">Tələbə əlavə et</h1>


<form asp-action="addstudent" asp-controller="student" method="post" class="col-md-6 m-auto border border-1 border-dark rounded-2 p-3">

<div class="mb-3">
    <label asp-for="Name" class="form-label">Ad Soyad</label>
    <input type="text" asp-for="Name" class="form-control"  placeholder="Ad soyad">
    <span class="text-danger " asp-validation-for="Name"></span>
</div>
<div class="row mb-3">
        <div class="col-6">
            <label asp-for="Gender" class="form-label">Cinsi Kişi/Qadın</label>
            <br />
            <input type="checkbox" class="form-check" asp-for="Gender" />
            <span class="text-danger " asp-validation-for="Gender"></span>
        </div>
        <div class="col-6">
            <label asp-for="SameGenderMatch" class="form-label">Yalnız eyni cinslə uyğunlaşma</label> <br />
            <input type="checkbox" class="form-check" asp-for="SameGenderMatch" />
            <span class="text-danger " asp-validation-for="SameGenderMatch"></span>
        </div>

</div>

    <div class="d-flex justify-content-end">

    <button type="submit" class="btn btn-outline-success">Əlavə Et</button>
    </div>

</form>
